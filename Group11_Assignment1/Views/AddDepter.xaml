<Window x:Class="Group11_Assignment1.AddDepter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Group11_Assignment1.ViewModels"
        xmlns:local="clr-namespace:Group11_Assignment1"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=models:AddPersonViewModelDesign, IsDesignTimeCreatable=True}"
        Title="Add deptor" Height="250" Width="350">
    <Window.DataContext>
        <models:AddPersonViewModel/>
    </Window.DataContext>
    <Grid>
        <!-- Label and textbox: Insert name-->
        <Label Name="LabelName" 
               Content="Name" 
               HorizontalAlignment="Left" 
               Margin="18,20,0,0" 
               VerticalAlignment="Top" 
               Foreground="#DD433D3D"
        />
        
        <TextBox Name="TextBoxName" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="80,23,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding NewName}" 
                 VerticalAlignment="Top" 
                 Width="199" 
                 BorderBrush="#89433A3A" 
                 Foreground="#FFA69A9A" 
                 SelectionBrush="Black" 
                 Background="#FFCDCBCB"
        />

        <!-- Label and textbox: Insert amount-->
        <Label Name="LabelAmount" 
               Content="Amount" 
               HorizontalAlignment="Left" 
               Margin="18,51,0,0" 
               VerticalAlignment="Top" 
               Foreground="#DD433D3D"
        />
        
        <TextBox Name="TextBoxAmount" 
                 HorizontalAlignment="Left" 
                 Height="23" 
                 Margin="80,54,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding NewAmount}" 
                 VerticalAlignment="Top" 
                 Width="199" 
                 BorderBrush="#89433A3A"  
                 Foreground="#FFA69A9A"
                 Background="#FFCDCBCB"
                 SelectionBrush="Black"
        />

        <!-- Buttons -->
        <Button Name="ButtonSave" 
                Content="Save" 
                Command="{Binding SaveBtnCommand}"
                HorizontalAlignment="Left" 
                Margin="80,163,0,25.667" 
                Width="90" 
                Foreground="Black" 
                Background="#FF928A8A" 
                FontFamily="Yu Gothic Medium" 
                FontSize="12" 
                Height="30"
        />
        
        <Button Name="ButtonCancel" 
                Content="Cancel"
                Command="{Binding CancelBtnCommand}"
                Margin="189,163,64.333,25.667" 
                Background="#FF928A8A" 
                FontFamily="Yu Gothic Medium" 
                FontSize="12" 
                Height="30"/>
    </Grid>
</Window>
